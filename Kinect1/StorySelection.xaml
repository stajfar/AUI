<Window x:Class="Kinect1.StorySelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StorySelection" Height="300" Width="300" >
       <Window.Background>
        <ImageBrush ImageSource="images/POCO-background.jpg"></ImageBrush>
    </Window.Background>
    
    <Grid>         
        <Grid Margin="43,192,34,10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Button  Grid.Column="0"   Margin="10,190,205,10" Click="Button_Click_DoorStory" >
                <Image Stretch="Fill" Source="images/cake.jpg" />            
            </Button>

            <Button  Grid.Column="1"   Margin="114,190,101,10" Click="Button_Click_DoorStory" >
                <Image Stretch="Fill" Source="images/order_apple.jpg" />
            </Button>

            <Button  Grid.Column="2"   Margin="210,190,5,10" Click="Button_Click_DoorStory" >
                <Image Stretch="Fill" Source="images/door_story.jpg" />
            </Button>
        </Grid>
    </Grid>
</Window>
